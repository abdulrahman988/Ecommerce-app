<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="product_name">
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_19ssp</item>
    </style>

    <style name="product_description">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="product_price">
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>




    <style name="cardViewItem">
        <item name="cardCornerRadius">@dimen/_20sdp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="cardElevation">@dimen/_3sdp</item>

    </style>

    <style name="firstButtonStyle">
        <item name="android:background">@drawable/dark_background</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="secondButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="thirdButtonStyle">
        <item name="android:background">@drawable/orange_background</item>
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
    </style>





    <style name="h4">
        <item name="android:fontFamily">@font/poppins_thin</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_28ssp</item>

    </style>

    <style name="h2">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="h3">
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15ssp</item>
    </style>



    <style name="editText">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>





</resources>